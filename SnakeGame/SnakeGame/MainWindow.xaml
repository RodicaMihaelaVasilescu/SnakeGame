<Window
  x:Class="SnakeGame.MainWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:control="clr-namespace:SnakeGame.View"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:SnakeGame"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  Title="MainWindow"
  Width="800"
  Height="450"
  KeyDown="Window_KeyDown"
  WindowState="Maximized"
  mc:Ignorable="d">
  <Window.Background>
    <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
      <GradientStop Offset="0.0" Color="#199157" />
      <GradientStop Offset="0.0" Color="#10854c" />
      <GradientStop Offset="0.10" Color="#18611b" />
      <GradientStop Offset="0.20" Color="#104212" />
      <GradientStop Offset="0.30" Color="#0d330f" />
      <GradientStop Offset="0.60" Color="Black" />
    </LinearGradientBrush>
  </Window.Background>
  <Grid>
    <control:SnakeBoardControl x:Name="SnakeBoardControl" />
  </Grid>
</Window>
