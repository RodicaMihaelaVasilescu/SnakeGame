<UserControl
  x:Class="SnakeGame.View.SnakeBoardControl"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:local="clr-namespace:SnakeGame.View"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
  d:DesignHeight="450"
  d:DesignWidth="800"
  mc:Ignorable="d">
  <Grid>
    <Grid.Background>
      <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
        <GradientStop Offset="0.0" Color="#199157" />
        <GradientStop Offset="0.0" Color="#10854c" />
        <GradientStop Offset="0.10" Color="#18611b" />
        <GradientStop Offset="0.20" Color="#104212" />
        <GradientStop Offset="0.30" Color="#0d330f" />
        <GradientStop Offset="0.60" Color="Black" />
      </LinearGradientBrush>
    </Grid.Background>
  </Grid>
</UserControl>
